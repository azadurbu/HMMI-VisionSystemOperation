        public Dictionary<string, int> GetCarOptEngList(string modelName, eCarOptEngType type)
        {
            Dictionary<string, int> results = new Dictionary<string, int>();

            for (int i = 0; i < mCars.Count; i++)
            {
                Car curCar = mCars[i];
                if (mCars[i].ModelName == modelName)
                {
                    if (type == eCarOptEngType.Option)
                    {
                        if (!results.ContainsKey(curCar.OptionType.Name))
                            results.Add(curCar.OptionType.Name, curCar.OptionType.index);
                    }
                    if (type == eCarOptEngType.Engine)
                    {
                        if (!results.ContainsKey(curCar.EngineType.Name))
                            results.Add(curCar.EngineType.Name, curCar.EngineType.index);
                    }
                }
            }

            return results;
        }

        public int[] GetCarOptEngIndexList(eCarOptEngType type)
        {
            List<int> results = new List<int>();

            for (int i = 0; i < mCars.Count; i++)
            {
                Car curCar = mCars[i];
                {
                    if (type == eCarOptEngType.Option)
                    {
                        if (curCar.OptionType.index == -1) continue;

                        if (!results.Contains(curCar.OptionType.index))
                            results.Add(curCar.OptionType.index);
                    }
                    if (type == eCarOptEngType.Engine)
                    {
                        if (curCar.EngineType.index == -1) continue;

                        if (!results.Contains(curCar.EngineType.index))
                            results.Add(curCar.EngineType.index);
                    }
                }
            }

            return results.ToArray();
        }

        public bool AddCar(string modelName, string optEngName, int plcIndex, eCarOptEngType type)
        {
            bool result = true;
            if (!IsExistCar(modelName, optEngName, type))
            {
                Car curCarModel = null;
                for (int i = 0; i < mCars.Count; i++)
                {
                    if (mCars[i].ModelName == modelName)
                    {
                        curCarModel = mCars[i];
                        break;
                    }
                }
                if (curCarModel == null)
                    result = false;
                else
                {
                    Car newModel = curCarModel.CopyTo();

                    Dictionary<string, int> optEngList = new Dictionary<string, int>();

                    if (type == eCarOptEngType.Option)
                    {
                        optEngList = GetCarOptEngList(modelName, eCarOptEngType.Engine);

                        for (int i = 0; i < optEngList.Count; i++)
                        {
                            newModel.EngineType = new sEngineType(optEngList.ElementAt(i).Key, optEngList.ElementAt(i).Value);
                            newModel.OptionType = new sOptionType(optEngName, plcIndex);

                            mCars.Add(newModel.CopyTo());
                        }
                    }
                    else if (type == eCarOptEngType.Engine)
                    {
                        optEngList = GetCarOptEngList(modelName, eCarOptEngType.Option);

                        for (int i = 0; i < optEngList.Count; i++)
                        {
                            newModel.EngineType = new sEngineType(optEngName, plcIndex);
                            newModel.OptionType = new sOptionType(optEngList.ElementAt(i).Key, optEngList.ElementAt(i).Value);

                            mCars.Add(newModel.CopyTo());
                        }
                    }

                }
            }
            else
            {
                result = false;
            }

            return result;
        }

        public bool DelCar(string name, int index, bool isBackup)
        {
            bool r = true;

            try
            {
                for (int i = mCars.Count - 1; i >= 0; i--)
                {
                    if (mCars[i].ModelName == name)
                    {
                        mCars.RemoveAt(i);

                        string path = PARAM_PATH + mCars[i].GetCarFullName();
                        if (Directory.Exists(path))
                        {
                            if (isBackup)
                                Directory.Move(path, path + "_bak_" + $"{DateTime.Now.Hour.ToString()}{DateTime.Now.Minute.ToString()}{DateTime.Now.Second.ToString()}");
                            else
                                Directory.Delete(path);
                        }
                    }
                }
            }
            catch (Exception ex)
            {
                string str = ex.ToString();
                r = false;
            }

            return r;
        }
        public bool DelCar(string modelName, string optEngName, eCarOptEngType type, bool isBackup)
        {
            bool r = true;

            try
            {
                for (int i = mCars.Count - 1; i >= 0; i--)
                {
                    if (mCars[i].ModelName == modelName)
                    {
                        if (type == eCarOptEngType.Option)
                        {
                            if (mCars[i].OptionType.Name == optEngName)
                            {
                                string path = PARAM_PATH + mCars[i].GetCarFullName();
                                if (Directory.Exists(path))
                                {
                                    if (isBackup)
                                        Directory.Move(path, path + "_bak_" + $"{DateTime.Now.Hour.ToString()}{DateTime.Now.Minute.ToString()}{DateTime.Now.Second.ToString()}");
                                    else
                                        Directory.Delete(path);
                                }

                                mCars.RemoveAt(i);
                            }
                        }
                        else if (type == eCarOptEngType.Engine)
                        {
                            if (mCars[i].EngineType.Name == optEngName)
                            {
                                string path = PARAM_PATH + mCars[i].GetCarFullName();
                                if (Directory.Exists(path))
                                {
                                    if (isBackup)
                                        Directory.Move(path, path + "_bak_" + $"{DateTime.Now.Hour.ToString()}{DateTime.Now.Minute.ToString()}{DateTime.Now.Second.ToString()}");
                                    else
                                        Directory.Delete(path, true);
                                }

                                mCars.RemoveAt(i);
                            }
                        }

                    }
                }
            }
            catch (Exception ex)
            {
                string str = ex.ToString();
                r = false;
            }

            return r;
        }

        public bool ModifyCar(string oldName, string newName, int newIdx)
        {
            bool r = true;

            try
            {
                for (int i = mCars.Count - 1; i >= 0; i--)
                {
                    if (mCars[i].ModelName == oldName)
                    {
                        string oldPath = PARAM_PATH + mCars[i].GetCarFullName();

                        mCars[i].ModelName = newName;
                        mCars[i].Index = newIdx;

                        string modPath = PARAM_PATH + mCars[i].GetCarFullName();

                        if (Directory.Exists(oldPath))
                        {
                            Directory.Move(oldPath, modPath);
                        }
                    }

                }
            }
            catch (Exception ex)
            {
                string str = ex.ToString();
                r = false;
            }

            return r;
        }

        public bool ModifyCar(string modelName, string oldOptEngName, string newOptEngName, int newOptEngIdx, eCarOptEngType type)
        {
            bool r = true;

            try
            {
                for (int i = mCars.Count - 1; i >= 0; i--)
                {
                    if (mCars[i].ModelName == modelName)
                    {
                        string oldPath = PARAM_PATH + mCars[i].GetCarFullName();

                        if (type == eCarOptEngType.Option)
                        {
                            if (mCars[i].OptionType.Name == oldOptEngName)
                            {
                                mCars[i].OptionType = new sOptionType(newOptEngName, newOptEngIdx);

                                string modPath = PARAM_PATH + mCars[i].GetCarFullName();
                                if (Directory.Exists(oldPath))
                                {
                                    Directory.Move(oldPath, modPath);
                                }
                            }
                        }
                        else if (type == eCarOptEngType.Engine)
                        {
                            if (mCars[i].EngineType.Name == oldOptEngName)
                            {
                                mCars[i].EngineType = new sEngineType(newOptEngName, newOptEngIdx);

                                string modPath = PARAM_PATH + mCars[i].GetCarFullName();
                                if (Directory.Exists(oldPath))
                                {
                                    Directory.Move(oldPath, modPath);
                                }
                            }
                        }
                    }
                }
            }
            catch (Exception ex)
            {
                string str = ex.ToString();
                r = false;
            }

            return r;
        }

